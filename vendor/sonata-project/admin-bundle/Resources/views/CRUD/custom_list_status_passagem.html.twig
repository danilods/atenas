{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}

{% block field %}
    <div>
	{% if object.statusPassagem == 0%}
	<span class="label label-default">Passagem não solicitada/cancelada</span>
	
	{% elseif object.statusPassagem == 1%}
	
	<span class="label label-info">Passagem aérea solicitada</span>
	
	{% elseif object.statusPassagem == 2 %}
	
	<span class="label label-warning">Passagem pendente de autorização do CENIPA</span>
	
	{% elseif object.statusPassagem == 3 %}
	
	<span class="label label-warning">Passagem autorizada pelo CENIPA</span>
	
	{% elseif object.statusPassagem == 4 %}
	
	<span class="label label-primary">Passagem em emissão</span>
	
	{% elseif object.statusPassagem == 5 %}
	
	<span class="label label-success">Passagem emitida ao militar/civil</span>	
	
	
	{% endif %}
{% endblock %}
