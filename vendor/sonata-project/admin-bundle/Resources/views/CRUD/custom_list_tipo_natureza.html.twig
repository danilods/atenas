{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}

{% block field %}
    <div>
	<i class="fa fa-money" aria-hidden="true"></i> R$ {{ object.custoEstimado|number_format(2, ',', '.') }} <br>
	<i class="fa fa-credit-card" aria-hidden="true"></i> {{object.tbTaxonomiaNaturezaDespesa }}<br>
	{%if object.missaoCusto == 1%}
		<span class="label label-warning">Sem custos para esta OM</span><br>

	{% elseif object.missaoPagaOutraOm == 1%}
		<span class="label label-warning">Custeada por outra OM</span><br>

	{% endif %}
    </div>
{% endblock %}
